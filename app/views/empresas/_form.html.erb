<%= simple_form_for @empresa, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@empresa[:name]) %>
  <%= f.input :nivel %>
  <%= error_span(@empresa[:nivel]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                empresas_path, :class => 'btn btn-default' %>
<% end %>
