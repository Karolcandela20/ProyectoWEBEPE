<%= notice %>

<%- model_class = Subcategoria -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:categoria) %></th>
      <th><%=t '.actions', :default => "AcciÃ³n" %></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategorias.each do |subcategoria| %>
      <tr>
        <td><%= subcategoria.name %></td>
        <td><%= subcategoria.categoria.name %></td>
        <td>
          <%= link_to t('.edit', :default => "Editar"),
                      edit_subcategoria_path(subcategoria), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => "Eliminar"),
                      subcategoria_path(subcategoria),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliinar el registro...?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => "Nuevo"),
            new_subcategoria_path,
            :class => 'btn btn-primary' %>